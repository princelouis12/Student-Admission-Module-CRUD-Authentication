  </servlet>
  
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.student.RegistrationServlet</servlet-class>
  </servlet>

  <!-- Map the servlets to URLs -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ForgetPasswordServlet</servlet-name>
    <url-pattern>/forgetPassword</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  

  <!-- Define the welcome files -->
  <welcome-file-list>
